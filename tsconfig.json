{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "target": "ESNEXT",
    "module": "commonjs",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
