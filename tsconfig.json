{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
